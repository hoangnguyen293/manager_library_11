<% provide :title, t("admin.books.index.search_result") %>
<div class="container-fluid">
  <div class="row heading-bg">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
      <h5 class="txt-dark"><%= t ".books" %></h5>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-default card-view">
        <div class="panel-wrapper collapse in">
          <div class="panel-body">
            <%= render "shared/messages" %>
            <div class="table-wrap mt-40">
              <div class="table-responsive">
                <table class="table table-hover table-bordered mb-0">
                  <thead>
                    <tr>
                      <th><%= t "admin.books.index.books" %></th>
                      <th><%= t "admin.books.index.description" %></th>
                      <th><%= t "admin.books.index.detail" %></th>
                      <th><%= t "admin.books.index.edition" %></th>
                      <th><%= t "admin.books.index.pages" %></th>
                      <th><%= t "admin.books.index.category" %></th>
                      <th><%= t "admin.books.index.publisher" %></th>
                      <th><%= t "admin.books.index.author" %></th>
                      <th><%= t "admin.books.index.picture" %></th>
                      <th class="text-nowrap"><%= t ".action" %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% if @books.size != 0 %>
                      <%= render @books %>
                    <% else %>
                      <p class="vali-error" ><%= t "search.index.not_found_result" %></p>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
            <%= will_paginate %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

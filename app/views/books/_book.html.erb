<div class="col-md-3 col-sm-6">
  <div class="best-seller-pro">
    <figure>
      <%= image_tag book.picture.url if book.picture? %>
    </figure>
    <div class="kode-text">
      <h3><%= link_to book.name, book_path(book) %></h3>
    </div>
    <div class="kode-caption">
      <h3><%= book.name %></h3>
      <%= link_to t("categories.show.view_detail"), book_path(book), class: "add-to-cart" %>
    </div>
  </div>
</div>
